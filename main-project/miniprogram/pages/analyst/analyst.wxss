/* miniprogram/pages/analyst/analyst.wxss */


.analyst-container{
  width: 750rpx;
  height: 1000rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.analysis-title_input{
  font-size: 42rpx;
  font-weight: 700;
  margin-bottom: 30rpx;
  margin-left: 30rpx;
  width: 700rpx;
  color: #393939;
}

.analysis-desc_input{
  font-size: 35rpx;
  margin-bottom: 30rpx;
  margin-left: 30rpx;
  width: 700rpx;
  color: #393939;
}

.analysis_input_ph{
  color: #909090;
}

.analyst-status{
  margin: 30rpx;
  width: 690rpx;
  height: 300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  color: #848484;
  text-align: center;
}


.enter-btn-container{
  position: fixed;
  bottom: 60rpx;
  left: 0;
  right: 0;
  height: 260rpx;
  width: 750rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.enter-btn{
  position: relative;
  width: 610rpx;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 6rpx;
  box-shadow: 0 3px 5px rgba(0,0,0,.1);
  background: linear-gradient(20deg, #7abd63, #29ae59 60%);
  color: white;
  font-size: 33rpx;
}

.enter-btn_2 {
  margin-top: 30rpx;
  color: #1f1f1f;
  background: linear-gradient(120deg, #f1f1f1, #eee 60%);
}

.enter-btn_disabled{
  opacity: .7;
}

.enter-btn_hover{
  opacity: .66;
}